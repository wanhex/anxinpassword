<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_root"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/selector_bg_password_item">

    <ImageView
        android:id="@+id/iv_account_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/iv_account_icon"
        android:layout_toRightOf="@+id/iv_account_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#775a4c"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="a*** @ FaceBook" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#775a4c"
            android:textSize="14sp"
            android:text="2017-09-06 22:22:22" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ib_copy_passwd"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@null"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription" />
</RelativeLayout>
